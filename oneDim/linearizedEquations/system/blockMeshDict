FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xmax 1.;

nx 40;
ny 1;

vertices
(
    (0 0 0)
    ($xmax 0 0)
    ($xmax $xmax 0)
    (0 $xmax 0)

    (0 0 1)
    ($xmax 0 1)
    ($xmax $xmax 1)
    (0 $xmax 1)
);

blocks
(
	hex (0 1 2 3 4 5 6 7)  ($nx $ny 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type            cyclic;
        neighbourPatch  outlet;
        faces           ((0 4 7 3));
    }
    outlet
    {
        type            cyclic;
        neighbourPatch  inlet;
        faces           ((5 1 2 6));
    }
);

mergePatchPairs
(
);

