FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue sigma.stable 1
    volScalarFieldValue sigma.buoyant 0
);

regions
(
    // Set cell values
    sphereToCell
    {
        centre (0 500 2e3);
        radius 2e3;
        
        fieldValues
        (
            volScalarFieldValue sigma.stable 0.2
            volScalarFieldValue sigma.buoyant 0.8
        );
    }
);

// ************************************************************************* //
