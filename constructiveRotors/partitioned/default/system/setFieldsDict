FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue buoyant.sigma 0
);

regions
(
    // Set cell values
    // (does zerogradient on boundaries)
    sphereToCell
    {
        centre (0 2e3 0);
        radius 1e3;

        fieldValues
        (
            volScalarFieldValue buoyant.sigma 1
        );
    }

);

// ************************************************************************* //
