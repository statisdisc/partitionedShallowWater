FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X12c/12c";
projection2D XZ;

FieldsToPlot
(
    [theta.stable filledContours 0 0 0 "$GMTU/colours/white_blue_red.cpt"]
    [u.stable    vectors 0 1 "black"]
);

separateLegend true;
region "-0/3000/0/3000";
annotate "minMax 250 400";
boundaryMarks "500/500";
plotBoundaryDots false;
