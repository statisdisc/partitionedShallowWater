FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue stable.source 0
);

regions
(
    // Set cell values
    // (does zerogradient on boundaries)
    //sphereToCell
    boxToCell
    {
        box (-2.5e3 0 0) (2.5e3 5e2 1000);

        fieldValues
        (
            volScalarFieldValue stable.source 1
        );
    }

);

