FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver PCG;
        preconditioner   DIC;
        tolerance        0;
        relTol           0;
    };
    Exner
    {
        solver PCG;
        preconditioner DIC;
        tolerance        1e-10;
        relTol           0.001;
    }

    ExnerFinal
    {
        $Exner;
        tolerance        1e-10;
        relTol           0;
    }
    
    "stable.sigmaRho|buoyant.sigmaRho"
    {
        solver PCG;
        preconditioner DIC;
        tolerance 1e-10;
    }
    
    theta
    {
        solver PBiCG;
        preconditioner   DILU;
        tolerance        1e-8;
        relTol           0;
    }
}

iterations
{
    nOuterCorrectors 2;
    nCorrectors      2;
    nNonOrthogonalCorrectors 0;
}

initialisation
{
    maxIters 50;
    BCiters  3;
    BCtol    1e-6;
}

